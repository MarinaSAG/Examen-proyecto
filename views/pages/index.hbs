{{> headerB}}

<div class="container">
    {{#if pintores}}
    <table class="table table-dark table-hover">
        <thead>
            <tr>
                <td>ID</td>
                <td>Nombre</td>
                <td>Apellido</td>
                <td>Nacionalidad</td>
                <td>Corriente</td>
                <td>Pintura</td>
            </tr>
        </thead>
        <tbody>
            {{#each pintores}}
            <tr>
                <td>{{_id}}</td>
                <td>{{name}}</td>
                <td>{{lastn}}</td>
                <td>{{nacionalidad}}</td>
                <td>{{corriente}}</td>
                <td><img src="../images/{{painting}}" width="400"></td>
            </tr>
            {{/each}}
        </tbody>
    </table>
    {{else}}
    <div><h2>No se encuentran datos</h2></div>
    <br><br><br>
    {{/if}}
</div>

{{> footerB}}